# =================================
# SERVER CONFIGURATION
# =================================
NODE_ENV=development
PORT=3000

# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# =================================
# AUTHENTICATION & SECURITY
# =================================
# JWT Secret Key (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# Session Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=your_super_secret_session_key_here

# =================================
# DATABASE CONFIGURATION
# =================================
# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crowdfund_development
DB_USER=postgres
DB_PASSWORD=password

# Alternative database URL format
# DATABASE_URL=postgresql://postgres:password@localhost:5432/crowdfund_development

# =================================
# REDIS CONFIGURATION
# =================================
# Redis Configuration (for sessions and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_URL=redis://localhost:6379

# =================================
# XENDIT PAYMENT GATEWAY
# =================================
# Xendit API Keys (get from https://dashboard.xendit.co/)
# Test Keys (for development)
XENDIT_SECRET_KEY=xnd_test_your_secret_key_here
XENDIT_PUBLIC_KEY=xnd_public_test_your_public_key_here

# Webhook URLs for Xendit callbacks
XENDIT_CALLBACK_URL=http://localhost:3000/api/payments/webhook/xendit
XENDIT_WEBHOOK_TOKEN=your_webhook_verification_token_here

# Payment Configuration
DEFAULT_PAYMENT_EXPIRY_HOURS=24
DEFAULT_INVOICE_DURATION_SECONDS=86400

# =================================
# WITHDRAWAL CONFIGURATION
# =================================
# Minimum withdrawal amount (in smallest currency unit, e.g., cents for USD, rupiah for IDR)
MINIMUM_WITHDRAWAL_AMOUNT=10000

# Maximum withdrawal amount (in smallest currency unit)
MAXIMUM_WITHDRAWAL_AMOUNT=100000000000

# Default processing fee rate (decimal, e.g., 0.005 = 0.5%)
DEFAULT_PROCESSING_FEE_RATE=0.005

# =================================
# FILE UPLOAD CONFIGURATION
# =================================
# Maximum file size for uploads (in bytes) - default 5MB
MAX_FILE_SIZE=5242880

# Upload directories
UPLOAD_DIR=uploads
AVATAR_UPLOAD_DIR=uploads/avatars
PROJECT_IMAGE_UPLOAD_DIR=uploads/projects

# =================================
# LOGGING CONFIGURATION
# =================================
# Log level: fatal, error, warn, info, debug, trace
LOG_LEVEL=info

# Pretty print logs in development
LOG_PRETTY=true

# =================================
# RATE LIMITING
# =================================
# Rate limit window in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# EMAIL CONFIGURATION (Optional)
# =================================
# Email service configuration (if you add email functionality)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# =================================
# EXTERNAL SERVICES (Optional)
# =================================
# Sentry for error tracking
# SENTRY_DSN=https://your_sentry_dsn_here

# AWS S3 Configuration (if using S3 for file storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket-name

# =================================
# DEVELOPMENT TOOLS
# =================================
# Enable Swagger UI in development
ENABLE_SWAGGER=true

# Database query logging
DB_LOGGING=false